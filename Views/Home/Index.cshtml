<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Address Book</title>
  </head>
  <body>
    <div class="container">
      <h2>(your name here)'s Address Book!</h2>
      <div class="showAll">
        <p>All Available Contacts</p>
        <ul>
        @foreach (var contact in Model)
        {
          <li>@contact.GetName()</li>
          <li>@contact.GetNumber()</li>
          <li>@contact.GetAddress()</li>
          <li>@contact.GetId()</li>
          <form class="" action="/removeOne/@contact.GetId()" method="post">
            <input type="hidden" name="removeOne" value="@contact.GetId()">
            <button type="submit" name="removeOneButton">Delete Contact</button>
          </form>
        }
      </ul>
    </div>
      <div class="makeNew">
        <label for="makeNew">Create New Contact</label>
        <form class="makeNew" action="/makeNew" method="post">
          <input type="text" name="newName" value="" placeholder="Enter Name"><br>
          <input type="text" name="newAddress" value="" placeholder="Enter Address"><br>
          <input type="text" name="newNumber" value="" placeholder="Enter Phone#"><br>
          <button type="submit" name="makeNewButton">Submit New Contact</button>
        </form>
      </div>


  </div>
  </body>
</html>
